NAME = test_lexer

CC = gcc
CFLAGS = -Wall -Wextra -Werror

INCLUDES = -I../../includes -I../../libft/inc
LIBS = -L../../libft -lft

OBJ_DIR = obj

SRCS = lexer.c \
       char_utils.c \
       env_utils.c \
       error_utils.c \
       operator_utils.c \
       quote_utils.c \
       token_utils.c \
       word_utils.c \
       ../env/env_expand.c \
       ../env/env_expand_utils.c \
       ../env/env_core.c \
       ../env/env_utils.c \
       ../env/env_parser.c \
       main_test.c

OBJS = $(addprefix $(OBJ_DIR)/, $(SRCS:.c=.o))

all: $(OBJ_DIR) $(NAME)

$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)
	@mkdir -p $(OBJ_DIR)/env

$(NAME): $(OBJS)
	$(CC) $(OBJS) $(LIBS) -o $(NAME)

$(OBJ_DIR)/%.o: %.c
	@mkdir -p $(dir $@)
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

test: all
	./$(NAME)

.PHONY: all clean fclean re test
